<!DOCTYPE html>
<html lang="en">
    @using FUNewsManagement.Helpers
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FUNewsManagement</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FUNewsManagement.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="News" asp-action="Index">FUNewsManagement</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="News" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (Context.Session.IsLoggedIn())  // SỬA: Sử dụng extension method
                        {
                            var currentUserJson = Context.Session.GetString("CurrentUser");
                            if (!string.IsNullOrEmpty(currentUserJson))
                            {
                                var currentUser = System.Text.Json.JsonSerializer.Deserialize<BusinessObjects.Models.SystemAccount>(currentUserJson);
                                var accountRole = currentUser?.AccountRole ?? 2; // Default to 2 if null

                                if (accountRole == 1) // Staff
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="Category" asp-action="Index">Categories</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="News" asp-action="MyNews">My News</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="Account" asp-action="Profile">Profile</a>
                                    </li>
                                }
                                else if (accountRole == 3) // Admin
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="Account" asp-action="ManageAccounts">Manage Accounts</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="News" asp-action="Report">Reports</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-controller="Account" asp-action="Profile">Profile</a>
                                    </li>
                                }
                                // Lecturer (role 2) has no additional menu items beyond Home
                            }
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (!Context.Session.IsLoggedIn())  // SỬA: Sử dụng extension method (phủ định)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                        else
                        {
                            var currentUserJson = Context.Session.GetString("CurrentUser");
                            if (!string.IsNullOrEmpty(currentUserJson))
                            {
                                var currentUser = System.Text.Json.JsonSerializer.Deserialize<BusinessObjects.Models.SystemAccount>(currentUserJson);
                                <li class="nav-item">
                                    <span class="nav-link text-dark">Welcome, @currentUser.AccountName</span>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - FUNewsManagement - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>