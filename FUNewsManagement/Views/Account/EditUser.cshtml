@model FUNewsManagement.Models.ViewModels.AccountFormViewModel

<form id="editForm" method="post" asp-action="EditUser" asp-route-id="@Model.AccountId">
    @Html.AntiForgeryToken()

    <!-- Thêm hidden field này để gửi AccountId -->
    <input asp-for="AccountId" type="hidden" />

    <div class="mb-3">
        <label asp-for="AccountName" class="form-label">Tên tài khoản</label>
        <input asp-for="AccountName" class="form-control" required />
        <span asp-validation-for="AccountName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AccountEmail" class="form-label">Email</label>
        <input asp-for="AccountEmail" type="email" class="form-control" required />
        <span asp-validation-for="AccountEmail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AccountPassword" class="form-label">Mật khẩu mới (để trống nếu không đổi)</label>
        <input asp-for="AccountPassword" type="password" class="form-control" />
        <span asp-validation-for="AccountPassword" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="AccountRole" class="form-label">Vai trò</label>
        <select asp-for="AccountRole" class="form-select" required>
            <option value="1">Staff</option>
            <option value="2">Lecturer</option>
            <option value="3">Admin</option>
        </select>
        <span asp-validation-for="AccountRole" class="text-danger"></span>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        </div>
    }

    <div class="d-flex justify-content-end gap-2">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
        <button type="submit" class="btn btn-primary">Cập nhật</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}